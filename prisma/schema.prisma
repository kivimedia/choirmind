generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                      String              @id @default(uuid())
  name                    String?
  email                   String              @unique
  emailVerified           DateTime?
  image                   String?
  locale                  String              @default("he")
  voicePart               String?             // soprano, mezzo, alto, tenor, baritone, bass
  role                    String              @default("member") // member, director, admin
  shabbatMode             Boolean             @default(false)
  xp                      Int                 @default(0)
  currentStreak           Int                 @default(0)
  longestStreak           Int                 @default(0)
  lastPracticeDate        DateTime?
  createdAt               DateTime            @default(now())
  updatedAt               DateTime            @updatedAt

  // Auth relations
  accounts                Account[]
  sessions                Session[]

  // App relations
  choirMemberships        ChoirMember[]
  chunkProgress           UserChunkProgress[]
  practiceSessions        PracticeSession[]
  assignmentsCreated      Assignment[]        @relation("AssignedBy")
  achievements            UserAchievement[]
  favoriteSongs           UserFavoriteSong[]

  // Vocal practice relations
  vocalAnalysisJobs       VocalAnalysisJob[]
  vocalPracticeSessions   VocalPracticeSession[]
  vocalQuota              UserVocalQuota?

  // Stripe
  stripeCustomerId        String?   @unique
}

model Account {
  id                String  @id @default(uuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(uuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model Choir {
  id         String   @id @default(uuid())
  name       String
  inviteCode String   @unique
  locale     String   @default("he-IL")
  weekStart  String   @default("sunday") // sunday or monday
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  members                    ChoirMember[]
  songs                      Song[]
  assignments                Assignment[]

  // Gamification
  leaderboardEnabled         Boolean  @default(true)

  // Stripe choir subscription
  stripeSubscriptionId       String?
  stripeCurrentPeriodEnd     DateTime?
  maxMembers                 Int?     @default(50)
}

model ChoirMember {
  id        String   @id @default(uuid())
  userId    String
  choirId   String
  role      String   @default("member") // member, director
  joinedAt  DateTime @default(now())

  user  User  @relation(fields: [userId], references: [id], onDelete: Cascade)
  choir Choir @relation(fields: [choirId], references: [id], onDelete: Cascade)

  @@unique([userId, choirId])
}

model Song {
  id            String   @id @default(uuid())
  choirId       String?  // null for personal songs
  title         String
  composer      String?
  lyricist      String?
  arranger      String?
  language      String   @default("he") // he, en, mixed, other
  textDirection String   @default("rtl") // rtl, ltr, auto
  isMedley      Boolean  @default(false)
  isPersonal    Boolean  @default(false)
  personalUserId String? // owner if personal song
  spotifyTrackId String?
  spotifyEmbed   String?
  youtubeVideoId String?
  source        String?  // "mila", "manual", etc.
  targetDate    DateTime?
  concertOrder  Int?
  tags          String?  // JSON array stored as string
  archivedAt    DateTime? // null = active, set = archived
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  choir       Choir?       @relation(fields: [choirId], references: [id], onDelete: Cascade)
  chunks      Chunk[]
  audioTracks AudioTrack[]
  assignments Assignment[]
  favoritedBy UserFavoriteSong[]

  // Vocal practice relations
  referenceVocals        ReferenceVocal[]
  vocalAnalysisJobs      VocalAnalysisJob[]
  vocalPracticeSessions  VocalPracticeSession[]
}

model Chunk {
  id            String  @id @default(uuid())
  songId        String
  label         String  // e.g., "בית 1", "פזמון", "גשר"
  chunkType     String  @default("verse") // verse, chorus, bridge, intro, outro, transition, coda, custom
  order         Int
  lyrics        String  // Full lyrics text (UTF-8 with nikkud)
  textDirection String  @default("rtl")
  lineTimestamps String? // JSON array of ms timestamps per line, e.g. "[0, 5200, 10400]"
  audioStartMs  Int?
  audioEndMs    Int?
  createdAt     DateTime @default(now())

  song     Song              @relation(fields: [songId], references: [id], onDelete: Cascade)
  progress UserChunkProgress[]
}

model AudioTrack {
  id         String   @id @default(uuid())
  songId     String
  voicePart  String   @default("full") // full, soprano, mezzo, alto, tenor, baritone, bass, mix, playback
  fileUrl    String
  sourceUrl  String?  // original URL for scraper idempotency
  durationMs Int?
  uploadedAt DateTime @default(now())

  song Song @relation(fields: [songId], references: [id], onDelete: Cascade)

  // Vocal practice relations
  referenceVocals ReferenceVocal[]
}

model UserChunkProgress {
  id              String    @id @default(uuid())
  userId          String
  chunkId         String
  fadeLevel       Int       @default(0) // 0-5
  memoryStrength  Float     @default(0.0) // 0.0-1.0
  easeFactor      Float     @default(2.5)
  intervalDays    Float     @default(1.0)
  nextReviewAt    DateTime  @default(now())
  reviewCount     Int       @default(0)
  lastReviewedAt  DateTime?
  elaborationNotes String?
  status          String    @default("fragile") // fragile, shaky, developing, solid, locked_in

  user  User  @relation(fields: [userId], references: [id], onDelete: Cascade)
  chunk Chunk @relation(fields: [chunkId], references: [id], onDelete: Cascade)

  @@unique([userId, chunkId])
}

model PracticeSession {
  id              String   @id @default(uuid())
  userId          String
  mode            String   @default("guided") // guided, free, interleaved, performance_sim, speed_round
  startedAt       DateTime @default(now())
  endedAt         DateTime?
  chunksPracticed String?  // JSON array [{chunkId, fadeLevel, selfRating}]
  durationSeconds Int?
  xpEarned        Int      @default(0)

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Assignment {
  id          String   @id @default(uuid())
  songId      String
  choirId     String
  voiceParts  String?  // JSON array of voice parts, null = all
  targetDate  DateTime?
  priority    String   @default("normal") // normal, high, urgent
  assignedAt  DateTime @default(now())
  assignedById String

  song       Song  @relation(fields: [songId], references: [id], onDelete: Cascade)
  choir      Choir @relation(fields: [choirId], references: [id], onDelete: Cascade)
  assignedBy User  @relation("AssignedBy", fields: [assignedById], references: [id])
}

model UserAchievement {
  id          String   @id @default(uuid())
  userId      String
  achievement String   // achievement key
  unlockedAt  DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, achievement])
}

model EmailLog {
  id         String   @id @default(uuid())
  to         String
  from       String
  subject    String
  status     String   // pending, sent, failed
  resendId   String?  // Resend email ID if successful
  error      String?  // Error message if failed
  provider   String   @default("resend") // resend, test
  context    String   @default("magic-link") // magic-link, test, etc.
  createdAt  DateTime @default(now())
}

model UserFavoriteSong {
  id        String   @id @default(uuid())
  userId    String
  songId    String
  createdAt DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  song Song @relation(fields: [songId], references: [id], onDelete: Cascade)

  @@unique([userId, songId])
}

// ---------------------------------------------------------------------------
// Vocal Practice & Analysis Models
// ---------------------------------------------------------------------------

model ReferenceVocal {
  id                   String   @id @default(uuid())
  songId               String
  voicePart            String
  sourceTrackId        String
  isolatedFileUrl      String?
  accompanimentFileUrl String?
  featuresFileUrl      String
  durationMs           Int
  demucsModel          String   @default("htdemucs_ft")
  status               String   @default("PENDING") // PENDING, PROCESSING, READY, FAILED
  errorMessage         String?
  createdAt            DateTime @default(now())
  updatedAt            DateTime @updatedAt

  song               Song                   @relation(fields: [songId], references: [id], onDelete: Cascade)
  sourceTrack        AudioTrack             @relation(fields: [sourceTrackId], references: [id], onDelete: Cascade)
  vocalPracticeSessions VocalPracticeSession[]

  @@unique([songId, voicePart, sourceTrackId])
  @@index([songId, voicePart, status])
}

model VocalAnalysisJob {
  id                  String    @id @default(uuid())
  userId              String
  songId              String
  voicePart           String
  recordingS3Key      String
  recordingDurationMs Int
  useHeadphones       Boolean   @default(false)
  status              String    @default("PENDING") // PENDING, PROCESSING, COMPLETED, FAILED
  errorMessage        String?
  attempts            Int       @default(0)
  practiceSessionId   String?   @unique
  createdAt           DateTime  @default(now())
  startedAt           DateTime?
  completedAt         DateTime?

  user            User                  @relation(fields: [userId], references: [id], onDelete: Cascade)
  song            Song                  @relation(fields: [songId], references: [id], onDelete: Cascade)
  practiceSession VocalPracticeSession? @relation(fields: [practiceSessionId], references: [id])

  @@index([status, createdAt])
  @@index([userId, songId])
}

model VocalPracticeSession {
  id               String   @id @default(uuid())
  userId           String
  songId           String
  voicePart        String
  recordingS3Key   String
  referenceVocalId String?
  overallScore     Float
  pitchScore       Float
  timingScore      Float
  dynamicsScore    Float
  sectionScores    String   // JSON array
  problemAreas     String   // JSON array (max 3)
  coachingTips     String   // JSON array of Hebrew strings
  xpEarned         Int      @default(0)
  durationMs       Int
  createdAt        DateTime @default(now())

  user           User              @relation(fields: [userId], references: [id], onDelete: Cascade)
  song           Song              @relation(fields: [songId], references: [id], onDelete: Cascade)
  referenceVocal ReferenceVocal?   @relation(fields: [referenceVocalId], references: [id])
  analysisJob    VocalAnalysisJob?

  @@index([userId, songId, createdAt])
}

model UserVocalQuota {
  id                    String    @id @default(uuid())
  userId                 String    @unique
  freeSecondsUsed        Int       @default(0)
  freeSecondsLimit       Int       @default(3600)
  purchasedSeconds       Int       @default(0)
  monthlySecondsLimit    Int       @default(0)
  plan                   String?
  subscriptionTier       String?
  subscriptionExpiresAt  DateTime?
  stripeSubscriptionId   String?
  stripeCurrentPeriodEnd DateTime?
  stripePriceId          String?
  createdAt              DateTime  @default(now())
  updatedAt              DateTime  @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}
